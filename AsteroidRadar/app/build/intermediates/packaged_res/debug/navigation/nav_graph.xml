<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.asteroidradar.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/nav_to_detail_fragemnt"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.asteroidradar.detail.DetailFragment"
        android:label="DetailFragment" >
        <argument
            android:name="selectedAsteroid"
            app:argType="com.example.asteroidradar.repository.database.Asteroid" />
    </fragment>
</navigation>